@model IEnumerable<MagniFinanceTest.MVC.ViewModels.StudentViewModel>

@{
	ViewData["Title"] = "Students";
}

<h2>@ViewData["Title"]</h2>

<p>
	<a href="@Url.Action("Create")" class="btn btn-info">Create New</a>
</p>
<table class="table table-hover">
	<thead class="thead-dark">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Birthday)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RegistrationNumber)
			</th>
			<th>
				@Html.DisplayName("Course")
			</th>
			<th>
				@Html.DisplayName("Average Subjects")
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Active)
			</th>
			<th></th>
		</tr>
	</thead>
	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Birthday)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.RegistrationNumber)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Course.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Average)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Active)
			</td>
			<td class="text-right">
				<a href="@Url.Action("Edit", new { id = item.StudentId })" class="btn btn-warning"><spam class="fa fa-pencil-alt"></spam></a>
				<a href="@Url.Action("Details", new { id = item.StudentId })" class="btn btn-info"><spam class="fa fa-book"></spam></a>
				<a href="@Url.Action("Delete", new { id = item.StudentId })" class="btn btn-danger"><spam class="fa fa-trash"></spam></a>
			</td>
		</tr>
	}

</table>
