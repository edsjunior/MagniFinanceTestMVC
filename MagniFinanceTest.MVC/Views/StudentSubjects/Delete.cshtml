@model MagniFinanceTest.MVC.ViewModels.StudentSubjectsViewModel

@{
	ViewData["Title"] = "Delete - " + Model.Student.Name;
}

<h4 style="padding-top: 30px">@ViewData["Title"] </h4>
<h5>Are you sure you want to delete this?</h5>
<hr />
<div>
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayName("Course")
		</dt>

		<dd>
			@Html.DisplayFor(model => model.CourseSubjects.Name)
		</dd>

		<dt>
			@Html.DisplayName("Student")
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Student.Name)
		</dd>

		<dt>
			@Html.DisplayName("Grade Value")
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Grade.GradeValue)
		</dd>

	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()

		<div class="form-actions no-color">
			<input type="submit" value="Delete" class="btn btn-dark" />
			<a href="javascript: history.go(-1)" class="btn btn-info">Go Back</a>
		</div>
	}
</div>
