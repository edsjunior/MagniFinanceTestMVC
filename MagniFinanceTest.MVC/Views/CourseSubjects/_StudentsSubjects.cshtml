@model IEnumerable<MagniFinanceTest.MVC.ViewModels.StudentSubjectsViewModel>
<div style="padding-top: 20px">
	<div>
		<hr />
		<h4>Students</h4>
	</div>
	@if (Model != null)
	{
		<table class="table table-hover">
			<thead class="thead-dark">
				<tr>
					<th>
						@Html.DisplayName("Subject")
					</th>
					<th>
						@Html.DisplayName("Student")
					</th>
					<th>
						@Html.DisplayName("Grade")
					</th>
					<th></th>
				</tr>
			</thead>

			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.CourseSubjects.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Student.Name)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.Grade.GradeValue)
					</td>
					<td class="text-right">
						<a href="@Url.Action("Edit", "StudentSubjects",  new { id = item.StudentSubjectsId })" class="btn btn-warning"><spam class="fa fa-pencil-alt"></spam></a>
						<a href="@Url.Action("Details", "StudentSubjects", new { id = item.StudentSubjectsId })" class="btn btn-info"><spam class="fa fa-info-circle"></spam></a>
						<a href="@Url.Action("Delete", "StudentSubjects", new { id = item.StudentSubjectsId })" class="btn btn-danger"><spam class="fa fa-trash"></spam></a>
					</td>
				</tr>
			}

		</table>
	}
</div>